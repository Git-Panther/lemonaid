<mvc:View
		controllerName="com.sap.mentors.lemonaid.controller.BaseBlock"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:forms="sap.ui.layout.form"
		xmlns:core="sap.ui.core"
		xmlns="sap.m">

	<forms:SimpleForm
			labelSpanL="4"
			labelSpanM="4"
			labelSpanS="4"
			emptySpanL="0"
			emptySpanM="0"
			emptySpanS="0"
			maxContainerCols="2" layout="ResponsiveLayout"
			width="100%">

		<core:Title text="{i18n>softSkills}" />

		<Label text="" visible="{= !${SoftSkill1Id} }" />
		<Text text="{i18n>nodata}" visible="{= !${SoftSkill1Id} }" />

		<Label text="{i18n>skill} 1" visible="{= !!${SoftSkill1Id} }" />
		<Text text="{SoftSkill1/Name}" visible="{= !!${SoftSkill1Id} }" />

		<Label text="{i18n>skill} 2" visible="{= !!${SoftSkill2Id} }" />
		<Text text="{SoftSkill2/Name}" visible="{= !!${SoftSkill2Id} }" />

		<Label text="{i18n>skill} 3" visible="{= !!${SoftSkill3Id} }" />
		<Text text="{SoftSkill3/Name}" visible="{= !!${SoftSkill3Id} }" />

		<Label text="{i18n>skill} 4" visible="{= !!${SoftSkill4Id} }" />
		<Text text="{SoftSkill4/Name}" visible="{= !!${SoftSkill4Id} }" />

		<Label text="{i18n>skill} 5" visible="{= !!${SoftSkill5Id} }" />
		<Text text="{SoftSkill5/Name}" visible="{= !!${SoftSkill5Id} }" />

		<Label text="{i18n>skill} 6" visible="{= !!${SoftSkill6Id} }" />
		<Text text="{SoftSkill6/Name}" visible="{= !!${SoftSkill6Id} }" />

	</forms:SimpleForm>
</mvc:View>

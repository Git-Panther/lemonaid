<mvc:View
	controllerName="com.sap.mentors.lemonaid.controller.Main"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content>

					<IconTabBar
						id="idIconTabBarNoIcons"
						expanded="{device>/isNoPhone}"
						class="sapUiResponsiveContentPadding">
						<items>
						
							<IconTabFilter text="{i18n>mentors}">
								<Table
									id="table"
									inset="false"
									growing="true"
									growingScrollToLoad="true"
									items="{
										path: '/Mentors',
										parameters: {
											select: 'Id,Email1,FullName,ShirtNumber,RelationshipToSap/Name,MentorStatus/Name',
											expand: 'MentorStatus,RelationshipToSap'
										},
										sorter: {path: 'ShirtNumber', descending: false}
									}"
									updateFinished="onUpdateFinished">
									<headerToolbar>
										<Toolbar id="tableToolbar">
											<Label text="{i18n>mentors} ({ui>/count})" class="sapMH4FontSize"  />
											<ToolbarSpacer />
											<SearchField
												id="searchField"
												search="onSearchPressed"
												placeholder="{i18n>searchPlaceholder}"
												width="30%" />
										</Toolbar>
									</headerToolbar>
									<columns>
										<Column id="shirtNumber" width="128px">
											<Text text="{i18n>shirtNumber}" />
										</Column>
										<Column id="photo" width="64px">
											<Text text="{i18n>photo}" />
										</Column>
										<Column id="fullName">
											<Text text="{i18n>fullName}" />
										</Column>
										<Column id="relationship">
											<Text text="{i18n>relSAP}" />	
										</Column>
										<Column id="status">
											<Text text="{i18n>mentorStatus}" />
										</Column>
									</columns>
									<ColumnListItem id="columnListItem" type="Navigation" press="onMentorDetailPress">
										<cells>
											<ObjectIdentifier title="{ShirtNumber}" class="sapMTableContentMargin" />
											<Image width="48px" height="48px" src="{path:'Email1', formatter:'.gravatar'}" class="sapMTableContentMargin" />
											<Text text="{FullName}" class="sapMTableContentMargin" />
											<Text text="{RelationshipToSap/Name}" class="sapMTableContentMargin" />
											<Text text="{MentorStatus/Name}" class="sapMTableContentMargin" />
										</cells>
									</ColumnListItem>
								</Table>
							</IconTabFilter>

						</items>
					</IconTabBar>
				</content>

			</Page>
		</pages>
	</App>
</mvc:View>
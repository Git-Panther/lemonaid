<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ViewSettingsDialog
		confirm="onVsdConfirm"
		cancel="onVsdCancel"
		resetFilters="onVsdResetFilters">
		<filterItems>
			<ViewSettingsFilterItem
				id="vsdFilter"
				items="{
					path: 'app>/SapSoftwareSolutions',
					templateShareable: true
				}"
				text="Area of Expertise">
				<items>
					<ViewSettingsItem text="{app>Name}" key="{app>Id}" selected="{app>selected}" />
				</items>
			</ViewSettingsFilterItem>
		</filterItems>
	</ViewSettingsDialog>
</core:FragmentDefinition>
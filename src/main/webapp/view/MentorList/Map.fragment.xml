<core:FragmentDefinition
	xmlns="openui5.googlemaps"
	xmlns:core="sap.ui.core">
    <Map
    	height="100%" 
    	width="100%" 
    	lat="20"
    	zoom="3" 
    	zoomControl="true"
    	markers="{
			path: '/Mentors',
			parameters: {
				select: 'Id,FullName,ShirtNumber,Email1,Latitude,Longitude,MentorStatus/Id',
				expand: 'MentorStatus'
			}
		}">
        <markers>  
            <Marker 
            	lat="{Latitude}" 
            	lng="{Longitude}" 
            	info="{
					parts: [
						'FullName',
						'ShirtNumber',
						'PhotoUrl',
						'MentorStatus/Id'
					],
					formatter: '.formatters.formatMapInfo'
				}"
            	icon="images/pin-{= ${MentorStatus/Id} === 'active' ? 'mentor' : 'alumni' }.svg" />  
        </markers>  
    </Map>
</core:FragmentDefinition>
<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:gmaps="openui5.googlemaps"
	xmlns:core="sap.ui.core">
    <gmaps:Map
    	id="map"
    	height="100%" 
    	width="100%" 
    	lat="20"
    	zoom="3" 
    	zoomControl="true"
    	markers="{
			path: '/Mentors',
			parameters: {
				select: 'Id,FullName,ShirtNumber,Email1,Latitude,Longitude,MentorStatus/Id',
				expand: 'MentorStatus'
			}
		}">
        <gmaps:markers>  
            <gmaps:Marker 
            	lat="{Latitude}" 
            	lng="{Longitude}" 
            	info="{
					parts: [
						'FullName',
						'ShirtNumber',
						'PhotoUrl',
						'MentorStatus/Id'
					],
					formatter: '.formatters.formatMapInfo'
				}"
            	icon="images/pin-{= ${MentorStatus/Id} === 'active' ? 'mentor' : 'alumni' }.svg" />  
        </gmaps:markers>  
    </gmaps:Map>
</core:FragmentDefinition>
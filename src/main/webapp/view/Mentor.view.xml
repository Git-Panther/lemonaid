<mvc:View 
	controllerName="com.sap.mentors.lemonaid.controller.Mentor" 
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.uxap" 
	xmlns:l="sap.ui.layout" 
	xmlns:m="sap.m" 
	xmlns:f="sap.ui.layout.form" 
	xmlns:gmaps="openui5.googlemaps">
	<ObjectPageLayout 
		id="ObjectPageLayout" 
		enableLazyLoading="false" 
		showTitleInHeaderContent="true"
		showEditHeaderButton="false"
		editHeaderButtonPress="handleEditBtnPress">

		<headerTitle>
			<ObjectPageHeader 
				id="header"
				objectImageURI="{PhotoUrl}"
				objectTitle="{FullName}"
				objectImageShape="Circle"
				objectImageAlt="{FullName}"
				objectSubtitle="{JobTitle}"
				isObjectIconAlwaysVisible="false"
				isObjectTitleAlwaysVisible="false"
				isObjectSubtitleAlwaysVisible="false">
				<navigationBar>
					<m:Bar>
						<m:contentLeft>
							<m:Button icon="sap-icon://nav-back" press="onNavBack"/>
						</m:contentLeft>
						<m:contentRight>
							<m:Button icon="sap-icon://edit" text="{i18n>edit}" press="onEdit" visible="{MayEdit}"/>
						</m:contentRight>
					</m:Bar>					
				</navigationBar>
			</ObjectPageHeader>
		</headerTitle>

		<headerContent>
			<m:NumericContent value="{ShirtNumber}" size="M" />
			<l:VerticalLayout>
				<m:Label text="{City}, {Country/Name}"/>
				<m:Link text="{Phone}"/>
				<m:Link text="{Email1}"/>
				<m:Link text="{Email2}"/>
			</l:VerticalLayout>
			<l:HorizontalLayout>
				<m:Image src="images/linkedin.png"></m:Image>
				<m:Image src="images/Twitter.png"></m:Image>
			</l:HorizontalLayout>
			<l:VerticalLayout>
				<m:Label text="{Bio}"/>
			</l:VerticalLayout>
			<l:VerticalLayout>
			</l:VerticalLayout>
		</headerContent>

		<sections>

			<ObjectPageSection title="{i18n>location}" importance="Medium">
				<subSections>
					<ObjectPageSubSection title="{i18n>location}">
						<blocks>
							<core:Fragment fragmentName="com.sap.mentors.lemonaid.view.mentor.Address" type="XML"/>
						</blocks>
						<blocks>
							<core:Fragment fragmentName="com.sap.mentors.lemonaid.view.mentor.Map" type="XML"/>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		
			<ObjectPageSection title="About" importance="Medium">
				<subSections>
					<ObjectPageSubSection title="Connect">
						<blocks>
							<f:SimpleForm labelMinWidth="192" maxContainerCols="2" layout="ResponsiveGridLayout" columnsL="1" columnsM="1" columnsXL="1">
								<f:title>
									<core:Title text="{i18n>status}"/>
								</f:title>
								<f:content>
								<m:Label text="{i18n>relSAP}"/>
								<m:Text text="{RelationshipToSap/Name}"/>
								<m:Label text="{i18n>mentorStatus}"/>
								<m:Text text="{MentorStatus/Name}"/>
								</f:content>
							</f:SimpleForm>
							<f:SimpleForm labelMinWidth="192" maxContainerCols="2" layout="ResponsiveGridLayout" columnsL="1" columnsM="1" columnsXL="1">
								<f:title>
									<core:Title text="{i18n>socialAccounts}"/>
								</f:title>
								<f:content>
								<m:Label text="SCN"/>
								<m:Link href="{ScnUrl}" text="{ScnUrl}" target="_blank"/>
								<m:Label text="LinkedIn"/>
								<m:Link href="{LinkedInUrl}" text="{LinkedInUrl}" target="_blank"/>
								<m:Label text="Twitter"/>
								<m:Text text="{TwitterId}"/>
								<m:Label text="Facebook"/>
								<m:Link href="{FacebookUrl}" text="{FacebookUrl}" target="_blank"/>
								</f:content>
							</f:SimpleForm>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection title="Media" importance="Medium">
				<subSections>
					<ObjectPageSubSection title="Media and Documents">
						<blocks>
							<core:Fragment fragmentName="com.sap.mentors.lemonaid.view.mentor.Attachments" type="XML"/>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

		</sections>
		
	</ObjectPageLayout>
	
</mvc:View>
<mvc:View
	controllerName="com.sap.mentors.lemonaid.controller.MentorDetails"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.uxap"
	xmlns:l="sap.ui.layout"
	xmlns:m="sap.m"
	xmlns:details="com.sap.mentors.lemonaid.view.MentorDetails">
	<ObjectPageLayout
		id="ObjectPageLayout"
		enableLazyLoading="false"
		showTitleInHeaderContent="true"
		showEditHeaderButton="false"
		editHeaderButtonPress="handleEditBtnPress">

		<headerTitle>
			<ObjectPageHeader
				id="header"
				objectImageURI="{PhotoUrl}"
				objectTitle="{FullName}"
				objectImageShape="Circle"
				objectImageAlt="{FullName}"
				objectSubtitle="{JobTitle}"
				isObjectIconAlwaysVisible="false"
				isObjectTitleAlwaysVisible="false"
				isObjectSubtitleAlwaysVisible="false">
				<navigationBar>
					<m:Bar>
						<m:contentLeft>
							<m:Button icon="sap-icon://nav-back" press="onNavBack"/>
						</m:contentLeft>
						<m:contentRight>
							<m:Button icon="sap-icon://edit" text="{i18n>edit}" press="onEdit" visible="{= ${MayEdit} &amp;&amp; !${ui>/isEditMode} }"/>
							<m:Button icon="sap-icon://save" text="Save changes" type="Accept" press="onSave" visible="{ui>/isEditMode}"/>
							<m:Button text="Cancel" press="onCancel" type="Reject" visible="{ui>/isEditMode}"/>
						</m:contentRight>
					</m:Bar>
				</navigationBar>
			</ObjectPageHeader>
		</headerTitle>
<!--
		<headerContent>
			<m:NumericContent value="{ShirtNumber}" size="M" />
			<l:VerticalLayout>
				<m:Label text="{City}, {Country/Name}"/>
				<m:Link text="{Phone}"/>
				<m:Link text="{Email1}"/>
				<m:Link text="{Email2}"/>
			</l:VerticalLayout>
			<l:HorizontalLayout>
				<m:Image src="images/linkedin.png" />
				<m:Image src="images/Twitter.png" />
			</l:HorizontalLayout>
			<l:VerticalLayout>
				<m:Label text="{Bio}"/>
			</l:VerticalLayout>
			<l:VerticalLayout>
			</l:VerticalLayout>
		</headerContent>
-->
		<sections>

			<ObjectPageSection id="personalInfoSection" title="{i18n>personalInfo}">
				<subSections>
					<ObjectPageSubSection title="{i18n>personalInfo}">
						<blocks>
							<details:BlockAddress />
							<details:BlockBio />
							<details:BlockSocialMedia />
							<details:BlockMap />
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection title="Mentor details" importance="Medium">
				<subSections>
					<ObjectPageSubSection title="Mentor details">
						<blocks>
							<details:BlockShirt />
							<details:BlockExpertise />
							<details:BlockTopics />
							<details:BlockSoftskills />
							<details:BlockJamBand />
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

 			<ObjectPageSection title="Media" importance="Medium">
				<subSections>
					<ObjectPageSubSection title="Media and Documents">
						<blocks>
							<details:BlockAttachments />
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

		</sections>

	</ObjectPageLayout>

</mvc:View>
